<%= simple_form_for @merchant do |f| %>

  <%=  f.input :production_parent_mid %>
  <%=  f.input :sandbox_parent_mid %>
  <%=  f.input :company, label:"Company Name"%>
  <%=  f.input :company_nickname %>
  <%=  f.input :main_contact %>
  <%=  f.input :main_contact_email %>
  <%=  f.input :franchise_or_smb %>
  <%=  f.check_box :has_global_db, label:"Global DB" %>
  <%=  f.check_box :has_memberships, label:"Memberships" %>
  <%=  f.check_box :has_migration, label:"Data Migration" %>
  <%=  f.check_box :has_dedicated_infrastructure, label:"Dedicated Infrastructure" %>
  <%=  f.check_box :has_enterprise_billing, label:"Enterprise Billing" %>
  <%=  f.input :notes %>
  <%=  f.input :rollout_planner_link %>
  <%=  f.input :project_plan_link %>
  <%=  f.input :drive_folder_link %>
  <%=  f.input :training %>
  <%=  f.input :timezone %>

  <%= f.submit 'Save' %>

<% end %>
