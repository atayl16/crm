<% @merchants.each do |merchant| %>
  <tr>
    <td style ="word-wrap:break-word;"><%= merchant.company%></td>
    <td style ="word-wrap:break-word;"><%= merchant.production_parent_mid%></td>
    <td style ="word-wrap:break-word;"><%= merchant.sandbox_parent_mid%></td>
    <td style ="word-wrap:break-word;"><%= merchant.timezone%></td>
    <td style ="word-wrap:break-word;"><%= merchant.main_contact%></td>
    <td> <%= link_to 'Rollout', "https://#{merchant.rollout_planner_link}"  %></td>
    <td> <%= link_to 'Project', "https://#{merchant.project_plan_link}"  %></td>
    <td> <%= link_to 'Folder', "https://#{merchant.drive_folder_link}"  %></td>
    <td><%= link_to edit_merchant_path(merchant) do %>
      <span class="fa fa-edit"></span>
      <% end %>            <%= link_to merchant_path(merchant), method: :delete, id: "delete_merchant_#{merchant.id}_from_index", data: { confirm: 'Are you sure you want to delete this merchant? This cannot be undone!' } do %>
      <span class="fa fa-trash">
      </span>
      <% end %>
    </td>
  </tr>
<% end %>
