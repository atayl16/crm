<h3>Users</h3>

<table class="table table-striped table-hover">
	<thead>
			<th>
        First Name
      </th>
      <th>
        Last Name
      </th>
      <th>
        Email
      </th>
      <th>
        User Type
      </th>
      	</thead>
  <tbody>
      <% @users.each do |user| %>
      <tr>
        <td style ="word-break:break-all;"><%= user.first_name %></td>
        <td style ="word-break:break-all;"><%= user.last_name %></td>
        <td style ="word-break:break-all;"><%= user.email %></td>
        <td style ="word-break:break-all;"><%= user.type %></td>
        <td><%= link_to 'Delete', user_path(user), method: :delete, id: "delete_user_#{user.id}_from_index", data: { confirm: 'Are you sure you want to delete this user? This cannot be undone!' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
